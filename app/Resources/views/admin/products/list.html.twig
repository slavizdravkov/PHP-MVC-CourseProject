{% extends 'base.html.twig' %}

{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Списък на продуктите</h1>
                </div>

                {% if app.session.flashBag.has('success') %}
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            {% for msg in app.session.flashBag.get('success') %}
                                <li>
                                    {{ msg }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">


            <div class="row">

                <!-- *** LEFT COLUMN ***
         _________________________________________________________ -->

                <div class="col-md-12">

                    <div class="box">

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Снимка</th>
                                    <th>ID</th>
                                    <th>Категория</th>
                                    <th>Име</th>
                                    <th>Описание</th>
                                    <th>Количество</th>
                                    <th>Цена</th>
                                    <th>Добавен на</th>
                                    <th>Действие</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td><img src="{{ asset('uploads/images/' ~ product.imageUrl) }}" alt="" class="image" width="30 px"></td>
                                            <th align="center">{{ product.id }}</th>
                                            {% if product.category == null %}
                                                <td><span class="label label-danger">Без категория</span>
                                            {% else %}
                                                <td><span class="label label-success">{{ product.category }}</span>
                                            {% endif %}
                                            <td>{{ product.name }}</td>
                                            <td>{{ product.description }}</td>
                                            <td align="center">{{ product.quantity }}</td>
                                            <td align="right">{{ product.price }} лв.</td>
                                            <td align="center">{{ product.createdOn|date('d-m-Y') }}</td>
                                            <td>
                                                <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-template-main btn-sm">Редакция</a>
                                                <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-template-main btn-sm">Изтриване</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.box -->

                </div>

            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->

{% endblock %}

