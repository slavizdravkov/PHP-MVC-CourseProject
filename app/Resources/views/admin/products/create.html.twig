{% extends 'base.html.twig' %}

{% block body %}

    <div id="heading-breadcrumbs">
        <div class="container">
            {% if app.session.flashBag.has('success') %}
                <div class="row">
                    <div class="col-md-8">
                        {% for msg in app.session.flashBag.get('success') %}
                            <h1>{{ msg }}</h1>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="box">
                    <h2 class="text-uppercase">Добавяне на продукти</h2>

                    <hr>

                    {{ form_start(productForm, {'action': path('create_product_process')}) }}
                    {{ form_row(productForm.name) }}
                    {{ form_row(productForm.description) }}
                    {{ form_row(productForm.size) }}
                    {{ form_row(productForm.quantity) }}
                    {{ form_row(productForm.price) }}
                    {{ form_row(productForm.imageUrl) }}
                    {{ form_row(productForm.category) }}
                    <div class="text-center">
                        <button type="submit" class="btn btn-template-main"><i class="fa fa-sign-in"></i> Добавяне</button>
                    </div>
                    {{ form_end(productForm) }}
                </div>
            </div>


        </div>
    </div>
{% endblock %}