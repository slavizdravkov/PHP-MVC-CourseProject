{% extends 'base.html.twig' %}

{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Добавяне на продукти в промоция</h1>
                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">


            <div class="row">

                <!-- *** LEFT COLUMN ***
         _________________________________________________________ -->

                <div class="col-md-12">

                    <div class="box">
                        <form method="post" action="{{ path('products_promotion_add_product', {'id': promotion.id}) }}">

                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th style="text-align: center">Снимка</th>
                                        <th style="text-align: center">ID</th>
                                        <th style="text-align: center">Категория</th>
                                        <th style="text-align: center">Име</th>
                                        <th style="text-align: center">Количество</th>
                                        <th style="text-align: center">Цена</th>
                                        <th style="text-align: center">Добави към промоция</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td align="center"><img src="{{ asset('uploads/images/' ~ product.imageUrl) }}" alt="" class="image" width="30 px"></td>
                                            <th style="text-align: center">{{ product.id }}</th>
                                            {% if product.category == null %}
                                            <td align="center"><span class="label label-danger">Без категория</span>
                                                {% else %}
                                            <td align="center"><span class="label label-success">{{ product.category }}</span>
                                                {% endif %}
                                            <td align="center">{{ product.name }}</td>
                                            <td align="center">{{ product.quantity }}</td>
                                            <td align="center">{{ product.price }} лв.</td>
                                            <td align="center">
                                                <input type="checkbox" value="{{ product.id }}" name="products[]">
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        <!-- /.table-responsive -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-template-main"><i class="fa fa-sign-in"></i> Добавяне</button>
                                <a class="btn btn-template-main" href="{{ path('products_promotion_list') }}">Отказ</a>
                            </div>
                        </form>
                    </div>
                    <!-- /.box -->

                </div>

            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
{% endblock %}

