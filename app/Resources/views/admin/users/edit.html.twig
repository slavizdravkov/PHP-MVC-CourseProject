{% extends 'base.html.twig' %}

{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Редакция на потребител</h1>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            {{ form_start(editForm) }}
            <div class="col-md-6">
                <div class="box">
                    {{ form_row(editForm.firstName) }}
                    {{ form_row(editForm.lastName) }}
                    {{ form_row(editForm.city) }}
                    {{ form_row(editForm.address) }}
                    {{ form_row(editForm.cash) }}
                </div>
            </div>

            <div class="col-md-6">
                <div class="box">
                    {{ form_row(editForm.email) }}
                    {{ form_row(editForm.plainPassword) }}
                    {{ form_widget(editForm.roles) }}
                    {{ form_row(editForm.status) }}
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-template-main"><i class="fa fa-save"></i> Редактиране</button>
                <a class="btn btn-template-main" href="{{ path('users_list') }}">Отказ</a>
            </div>

            {{ form_end(editForm) }}

        </div>
    </div>

{% endblock %}

