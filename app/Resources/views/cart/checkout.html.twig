{% extends '::base.html.twig' %}

{% block body %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Адрес за доставка и начин на плащане</h1>
                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">

            <div class="row">

                <div class="col-md-12 clearfix" id="checkout">

                    <div class="box">
                        {{ form_start(form) }}

                            <div class="content">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.shipFirstName) }}
                                        </div>

                                        <div class="form-group">
                                            {{ form_row(form.shipLastName) }}
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_row(form.shipCity) }}
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_row(form.shipZipCode) }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            {{ form_row(form.shipAddress) }}
                                        </div>

                                        <div class="form-group">
                                            {{ form_row(form.shipEmail) }}
                                        </div>

                                        <div class="form-group">
                                            {{ form_row(form.shipPhone) }}
                                        </div>
                                    </div>

                                    <div class="col-md-6">

                                        <div class="box payment-method">

                                            <h4>Paypal</h4>


                                            <div class="box-footer text-center">

                                                <input type="radio" name="payment" value="PayPal">
                                            </div>
                                        </div>

                                        <div class="box payment-method">

                                            <h4>Плащане при доставка</h4>

                                            <p>Ще платите, когато получите пратката.</p>

                                            <div class="box-footer text-center">

                                                <input type="radio" name="payment" value="При получаване">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!-- /.row -->

                            </div>

                            <div class="box-footer">
                                <div class="pull-left">
                                    <a href="{{ path('cart_index') }}" class="btn btn-default"><i class="fa fa-chevron-left"></i>Обратно към количката</a>
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-template-main">Финализиране на поръчката<i class="fa fa-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box -->

                </div>
                <!-- /.col-md-9 -->

            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#content -->
{% endblock %}

