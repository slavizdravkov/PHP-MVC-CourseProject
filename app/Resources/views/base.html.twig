<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="robots" content="all,follow">
        <meta name="googlebot" content="index,follow,snippet,archive">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <meta name="keywords" content="">

        <title>{% block title %}Online Store{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
            <link rel="stylesheet" id="theme-stylesheet" href="{{ asset('css/style.default.css') }}">
            <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">
        {% block header %}
            <header>

                <!-- *** TOP ***
    _________________________________________________________ -->
                <div id="top">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">

                                <div class="login">
                                    {% if app.user %}
                                        <a href="{{ path('user_logout') }}"><i class="fa fa-sign-out"></i> Изход</a>
                                    {% else %}
                                        <a href="{{ path('user_login') }}"><i class="fa fa-sign-in"></i> <span class="hidden-xs text-uppercase">Влез в акаунт</span></a>
                                        <a href="{{ path('user_register') }}"><i class="fa fa-user"></i> <span class="hidden-xs text-uppercase">Регистрация</span></a>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- *** TOP END *** -->

                <!-- *** NAVBAR ***
        _________________________________________________________ -->

                <div class="navbar-affixed-top" data-spy="affix" data-offset-top="200">

                    <div class="navbar navbar-default yamm" role="navigation" id="navbar">

                        <div class="container">
                            <div class="navbar-header">

                                <a class="navbar-brand home" href="{{ path('homepage') }}">
                                    <img src="{{ asset('img/logo.png') }}" alt="Universal logo" class="hidden-xs hidden-sm">
                                    <img src="{{ asset('img/logo-small.png') }}" alt="Universal logo" class="visible-xs visible-sm"><span class="sr-only">Universal - go to homepage</span>
                                </a>
                                <div class="navbar-buttons">
                                    <button type="button" class="navbar-toggle btn-template-main" data-toggle="collapse" data-target="#navigation">
                                        <span class="sr-only">Toggle navigation</span>
                                        <i class="fa fa-align-justify"></i>
                                    </button>
                                </div>
                            </div>
                            <!--/.navbar-header -->

                            <div class="navbar-collapse collapse" id="navigation">

                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown use-yamm yamm-fw">
                                        <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Промоции <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="#">Категории</a>
                                            </li>
                                            <li>
                                                <a href="#">Продукти</a>
                                            </li>
                                            <li>
                                                <a href="#">Продукти на други потребители</a>
                                            </li>
                                        </ul>
                                    </li>

                                    {% if app.user %}
                                        <li class="dropdown use-yamm yamm-fw">
                                            <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Продай свой продукт <b class="caret"></b></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a href="#">Списък на всички закупени от магазина продукти</a>
                                                </li>
                                            </ul>
                                        </li>

                                        {% if app.user.isEditor() or app.user.isAdmin() %}
                                            <li class="dropdown use-yamm yamm-fw">
                                                <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Продукти <b class="caret"></b></a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="{{ path('create_product') }}">Добавяне</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('products_list') }}">Списък на всички продукти</a>
                                                    </li>
                                                </ul>
                                            </li>

                                            <li class="dropdown use-yamm yamm-fw">
                                                <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Категории <b class="caret"></b></a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="{{ path('category_create') }}">Добавяне</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('categories_list') }}">Списък на всички категории</a>
                                                    </li>
                                                </ul>
                                            </li>

                                        {% endif %}

                                        {% if app.user.isAdmin() %}
                                            <li class="dropdown use-yamm yamm-fw">
                                                <a href="javascript: void(0)" class="dropdown-toggle" data-toggle="dropdown">Потребители <b class="caret"></b></a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="{{ path('users_list') }}">Списък на всички потребители</a>
                                                    </li>
                                                </ul>
                                            </li>
                                        {% endif %}

                                    {% endif %}
                                </ul>

                            </div>
                            <!--/.nav-collapse -->

                        </div>


                    </div>
                    <!-- /#navbar -->

                </div>

                <!-- *** NAVBAR END *** -->

            </header>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <footer>
                <div id="copyright">
                    <div class="container">
                        <div class="col-md-12">
                            <p class="pull-left">&copy; 2017. OnlineShop</p>
                            <p class="pull-right">Template by <a href="https://bootstrapious.com">Bootstrapious</a> & <a href="https://remoteplease.com">Remote Please</a>
                                <!-- Not removing these links is part of the license conditions of the template. Thanks for understanding :) If you want to use the template without the attribution links, you can do so after supporting further themes development at https://bootstrapious.com/donate  -->
                            </p>

                        </div>
                    </div>
                </div>

            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
            <script>
                window.jQuery || document.write('<script src="{{ asset('js/jquery-1.11.0.min.js') }}"><\/script>')
            </script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/jquery.cookie.js') }}"></script>
            <script src="{{ asset('js/waypoints.min.js') }}"></script>
            <script src="{{ asset('js/jquery.counterup.min.js') }}"></script>
            <script src="{{ asset('js/jquery.parallax-1.1.3.js') }}"></script>
            <script src="{{ asset('js/front.js') }}"></script>
        {% endblock %}
    </body>
</html>
